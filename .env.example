# Django Configuration (REQUIRED)
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/coffee_db

# Ollama Configuration
OLLAMA_PRIMARY_HOST=https://chat-impact.fernuni-hagen.de/ollama
OLLAMA_PRIMARY_AUTH_TOKEN=your-ollama-primary-token
OLLAMA_PRIMARY_VERIFY_SSL=True
OLLAMA_FALLBACK_HOST=http://catalpa-llm.fernuni-hagen.de:11434/
OLLAMA_FALLBACK_AUTH_TOKEN=your-ollama-fallback-token
OLLAMA_FALLBACK_VERIFY_SSL=False
OLLAMA_MODEL_NAMES=phi4:latest,mistral:latest,llama3.1:latest  # Comma-separated list of available models
OLLAMA_REQUEST_TIMEOUT=300
OLLAMA_ENABLE_FALLBACK=True

# Azure OpenAI Configuration
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_ENDPOINT=https://oai-catalpa-coffee-weu-prd.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4  # Primary deployment name
AZURE_OPENAI_DEPLOYMENT_NAMES=gpt-4,gpt-35-turbo  # Comma-separated list of available deployments
AZURE_OPENAI_MAX_TOKENS=2000
AZURE_OPENAI_TEMPERATURE=0.7

# Azure AI Inference Configuration
AZURE_AI_ENDPOINT=https://aif-infra01-we-sandbox.services.ai.azure.com/models
AZURE_AI_API_KEY=<YOUR_API_KEY>
AZURE_AI_API_VERSION=2024-05-01-preview
AZURE_AI_MODEL_NAMES=Phi-4,Meta-Llama-3.1-8B-Instruct  # Comma-separated list of available models
AZURE_AI_MAX_TOKENS=2048
AZURE_AI_TEMPERATURE=0.8
AZURE_AI_TOP_P=0.1
AZURE_AI_PRESENCE_PENALTY=0.0
AZURE_AI_FREQUENCY_PENALTY=0.0

# LLM Backend Display Names (customize how backends appear in UI)
LLM_OLLAMA_DISPLAY_NAME=Ollama
LLM_AZURE_OPENAI_DISPLAY_NAME=FernUni